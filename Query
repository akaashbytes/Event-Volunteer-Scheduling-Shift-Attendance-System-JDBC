 VOLUNTEER_TBL:
 
   CREATE TABLE VOLUNTEER_TBL (
    VOLUNTEER_ID      VARCHAR2(12) PRIMARY KEY,
    FULL_NAME         VARCHAR2(150) NOT NULL,
    SKILL_CATEGORY    VARCHAR2(50) NOT NULL,
    PRIMARY_PHONE     VARCHAR2(20) NOT NULL,
    EMAIL             VARCHAR2(100),
    STATUS            VARCHAR2(20) DEFAULT 'ACTIVE'
        CHECK (STATUS IN ('ACTIVE','INACTIVE'))
);

SHIFT_TBL:

CREATE TABLE SHIFT_TBL (
    SHIFT_ID            NUMBER(10) PRIMARY KEY,
    SHIFT_DATE          DATE NOT NULL,
    START_TIME          VARCHAR2(10) NOT NULL,
    END_TIME            VARCHAR2(10) NOT NULL,
    LOCATION            VARCHAR2(100) NOT NULL,
    REQUIRED_HEADCOUNT  NUMBER(4) CHECK (REQUIRED_HEADCOUNT > 0),
    STATUS              VARCHAR2(25) DEFAULT 'PLANNED'
        CHECK (STATUS IN ('PLANNED',
                          'OPEN_FOR_ASSIGNMENT',
                          'CLOSED',
                          'CANCELLED'))
);

ASSIGNMENT_TBL:

CREATE TABLE ASSIGNMENT_TBL (
    ASSIGNMENT_ID     NUMBER(10) PRIMARY KEY,
    VOLUNTEER_ID      VARCHAR2(12) NOT NULL,
    SHIFT_ID          NUMBER(10) NOT NULL,
    ASSIGNED_ROLE     VARCHAR2(50) NOT NULL,
    ATTENDANCE_STATUS VARCHAR2(20) DEFAULT 'PENDING'
        CHECK (ATTENDANCE_STATUS IN ('PENDING','PRESENT','ABSENT')),
    CHECKIN_TIME      VARCHAR2(10),
    CHECKOUT_TIME     VARCHAR2(10),
    CONSTRAINT FK_VOL
        FOREIGN KEY (VOLUNTEER_ID)
        REFERENCES VOLUNTEER_TBL(VOLUNTEER_ID)
        ON DELETE CASCADE,
    CONSTRAINT FK_SHIFT
        FOREIGN KEY (SHIFT_ID)
        REFERENCES SHIFT_TBL(SHIFT_ID)
        ON DELETE CASCADE
);