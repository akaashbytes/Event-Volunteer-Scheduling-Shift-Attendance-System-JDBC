package com.eventvol.dao;

import java.sql.Connection;
import java.sql.PreparedStatement;
import java.sql.ResultSet;
import java.util.ArrayList;
import java.util.List;

import com.eventvol.bean.Shift;
import com.eventvol.util.DBUtil;

public class ShiftDAO {

    public Shift findShift(int shiftID) {
        try {
            Connection con = DBUtil.getDBConnection();
            String query = "SELECT * FROM SHIFT_TBL WHERE SHIFT_ID=?";
            PreparedStatement ps = con.prepareStatement(query);
            ps.setInt(1, shiftID);

            ResultSet rs = ps.executeQuery();
            if (rs.next()) {
                Shift s = new Shift();
                s.setShiftID(rs.getInt(1));
                s.setShiftDate(rs.getDate(2));
                s.setStartTime(rs.getString(3));
                s.setEndTime(rs.getString(4));
                s.setLocation(rs.getString(5));
                s.setRequiredHeadcount(rs.getInt(6));
                s.setStatus(rs.getString(7));
                return s;
            }
        } catch (Exception e) {
            e.printStackTrace();
        }
        return null;
    }

    public List<Shift> viewAllShifts() {
        List<Shift> list = new ArrayList<>();
        try {
            Connection con = DBUtil.getDBConnection();
            String query = "SELECT * FROM SHIFT_TBL";
            PreparedStatement ps = con.prepareStatement(query);
            ResultSet rs = ps.executeQuery();

            while (rs.next()) {
                Shift s = new Shift();
                s.setShiftID(rs.getInt(1));
                s.setShiftDate(rs.getDate(2));
                s.setStartTime(rs.getString(3));
                s.setEndTime(rs.getString(4));
                s.setLocation(rs.getString(5));
                s.setRequiredHeadcount(rs.getInt(6));
                s.setStatus(rs.getString(7));
                list.add(s);
            }
        } catch (Exception e) {
            e.printStackTrace();
        }
        return list;
    }

    public boolean insertShift(Shift shift) {
        try {
            Connection con = DBUtil.getDBConnection();
            String query = "INSERT INTO SHIFT_TBL VALUES (?,?,?,?,?,?,?)";
            PreparedStatement ps = con.prepareStatement(query);

            ps.setInt(1, shift.getShiftID());
            ps.setDate(2, shift.getShiftDate());
            ps.setString(3, shift.getStartTime());
            ps.setString(4, shift.getEndTime());
            ps.setString(5, shift.getLocation());
            ps.setInt(6, shift.getRequiredHeadcount());
            ps.setString(7, shift.getStatus());

            return ps.executeUpdate() > 0;
        } catch (Exception e) {
            return false;
        }
    }

    public boolean updateShiftStatus(int shiftID, String status) {
        try {
            Connection con = DBUtil.getDBConnection();
            String query = "UPDATE SHIFT_TBL SET STATUS=? WHERE SHIFT_ID=?";
            PreparedStatement ps = con.prepareStatement(query);
            ps.setString(1, status);
            ps.setInt(2, shiftID);

            return ps.executeUpdate() > 0;
        } catch (Exception e) {
            return false;
        }
    }

    public int countAssignmentsForShift(int shiftID) {
        try {
            Connection con = DBUtil.getDBConnection();
            String query = "SELECT COUNT(*) FROM ASSIGNMENT_TBL WHERE SHIFT_ID=?";
            PreparedStatement ps = con.prepareStatement(query);
            ps.setInt(1, shiftID);
            ResultSet rs = ps.executeQuery();

            if (rs.next())
                return rs.getInt(1);
        } catch (Exception e) {
            e.printStackTrace();
        }
        return 0;
    }
}
